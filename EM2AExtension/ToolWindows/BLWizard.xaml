<platform:DialogWindow  x:Class="EM2AExtension.BLWizard"
                        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                        xmlns:platform="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Shell.15.0"
                        xmlns:toolkit="clr-namespace:Community.VisualStudio.Toolkit;assembly=Community.VisualStudio.Toolkit"
                        toolkit:Themes.UseVsTheme="True"
                        mc:Ignorable="d"
                        ResizeMode="NoResize"
                        Width="410"
                        Height="100">
    <Grid>
        <Button Command="{Binding CmdAddBL}" Content="Add" HorizontalAlignment="Left" Height="34" Margin="314,10,0,0" VerticalAlignment="Top" Width="76"/>
        <TextBox Text="{Binding BLName}" HorizontalAlignment="Left" Height="34" Margin="97,10,0,0" VerticalAlignment="Top" Width="212"/>
        <Label Content="Business layer" HorizontalAlignment="Left" Height="34" Margin="0,10,0,0" VerticalAlignment="Top" Width="108"/>
    </Grid>
</platform:DialogWindow>
