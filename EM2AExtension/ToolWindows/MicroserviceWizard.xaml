<platform:DialogWindow  x:Class="EM2AExtension.MicroserviceWizard"
                        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                        xmlns:platform="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Shell.15.0"
                        xmlns:toolkit="clr-namespace:Community.VisualStudio.Toolkit;assembly=Community.VisualStudio.Toolkit"
                        toolkit:Themes.UseVsTheme="True"
                        mc:Ignorable="d"
                        Width="405"
                        Height="115"
                        ResizeMode="NoResize">
    <Grid Margin="0,0,0,0">
        <TextBox  HorizontalAlignment="Left" Height="35" Margin="88,0,0,0" TextWrapping="Wrap" Text="{Binding PrjName}" VerticalAlignment="Center" Width="212"/>
        <Label Content="Microservice" HorizontalAlignment="Left" Height="29" Margin="10,0,0,0" VerticalAlignment="Center" Width="78"/>
        <Button Command="{Binding CmdAddMicroservice}" Content="Create" HorizontalAlignment="Left" Height="29" Margin="305,0,0,0" VerticalAlignment="Center" Width="76"/>

    </Grid>
</platform:DialogWindow>
