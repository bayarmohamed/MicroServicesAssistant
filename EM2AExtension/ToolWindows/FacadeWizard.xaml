<platform:DialogWindow  x:Class="EM2AExtension.FacadeWizard"
                        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                        xmlns:platform="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Shell.15.0"
                        xmlns:toolkit="clr-namespace:Community.VisualStudio.Toolkit;assembly=Community.VisualStudio.Toolkit"
                        toolkit:Themes.UseVsTheme="True"
                        mc:Ignorable="d"
                        Width="405"
                        Height="117"
                        ResizeMode="NoResize">      
    <Grid>
        <Button Command="{Binding CmdAddFacade}" Content="Add" HorizontalAlignment="Left" Height="34" Margin="308,10,0,0" VerticalAlignment="Top" Width="73"/>
        <TextBox Text="{Binding FacadeName}" HorizontalAlignment="Left" Height="34" Margin="64,10,0,0" VerticalAlignment="Top" Width="230"/>
        <Label Content="Facade" HorizontalAlignment="Left" Height="34" Margin="10,10,0,0" VerticalAlignment="Top" Width="108"/>
    </Grid>
</platform:DialogWindow>
